# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /admin                      core.controllers.MainController.index
GET     /admin/login                core.controllers.AdminController.login
POST    /admin/login                core.controllers.AdminController.doLogin
GET     /admin/logout               core.controllers.AdminController.logout
GET     /api/v1/pagetypes           core.controllers.MainController.getPageTypes
GET     /documents                  core.controllers.MainController.listDocuments
DELETE  /documents/:id              core.controllers.MainController.deleteDocument(id:Long)
POST    /documents                  core.controllers.MainController.addDocument
PUT     /documents/:id/collapse     core.controllers.MainController.collapseDocument(id:Long)
PUT     /documents/:id/rename       core.controllers.MainController.renameDocument(id:Long)
PUT     /documents/:id/updateparent core.controllers.MainController.updateParentDocument(id:Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /*path                 core.controllers.MainController.page(path:String)